<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".log.LogDetailActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            app:title="Request Detail"
            app:titleTextColor="@color/black"
            app:titleMarginTop="0dp"
            app:titleMarginBottom="0dp"
            app:titleTextAppearance="@style/TextAppearance.App.Headline6"
            android:layout_height="?attr/actionBarSize"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="65dp">
        <LinearLayout
            android:id="@+id/llStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="@font/chakrapetch_regular"
                android:textColor="@color/colorAddress"
                android:text="Status"
                />

        </LinearLayout>

            <LinearLayout
                android:id="@+id/llPersonal"
                android:padding="8dp"
                android:layout_below="@id/llStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="8dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:text="Name:"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:text="Contact No:    "
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:text="Name"
                        />
                    <TextView
                        android:id="@+id/tvContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:text="Contact No"
                        />
                </LinearLayout>

            </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/llPersonal"
            android:layout_marginBottom="6dp"
            android:background="@color/colorGreyBackground"/>



            <LinearLayout
                android:id="@+id/llFood"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"

                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="8dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:text="Food Items:"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:text="Quantity:"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:text="Requested On:"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tvFoodItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:text="Food Items"
                        />
                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:text="Quantity"
                        />
                    <TextView
                        android:id="@+id/tvRequestedOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:text="Requested Date"
                        />
                </LinearLayout>

            </LinearLayout>
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/llFood"
            android:layout_marginBottom="6dp"
            android:background="@color/colorGreyBackground"/>


            <LinearLayout
                android:id="@+id/llLocation"
                android:padding="8dp"
                android:layout_below="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="8dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:text="Location:         "
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:text="Location"
                        />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/llViewMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llLocation"
                android:gravity="center"
                android:layout_marginBottom="16sp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnViewMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View in map"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_placeholder"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    />

            </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/llViewMap"
            android:layout_marginBottom="6dp"
            android:background="@color/colorGreyBackground"/>

        <LinearLayout
            android:id="@+id/llAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/line2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDecline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textAllCaps="false"
                android:textColor="@color/colorGreyText"
                style="?attr/materialButtonOutlinedStyle"
                android:textSize="20sp" />

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Decline"-->
            <!--                android:textSize="24sp"-->
            <!--                android:layout_marginRight="16sp"-->
            <!--                android:textColor="@color/red"-->
            <!--                />-->
            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Accept"-->
            <!--                android:textSize="24sp"-->
            <!--                android:textColor="@color/colorGreen"-->
            <!--                />-->
            <Button
                android:id="@+id/btnAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:layout_marginLeft="16sp"
                android:textAllCaps="false"
                android:textSize="20sp" />

        </LinearLayout>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>