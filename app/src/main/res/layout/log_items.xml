<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:cardCornerRadius="4dp"
            app:cardMaxElevation="2dp"
            android:layout_marginBottom="4dp"
            app:cardElevation="1dp"
            >
            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/llName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="Name of Person"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tvContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"
                        android:text="Contact" />

                    <TextView
                        android:id="@+id/tvRequestedOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"
                        android:text="Requested On" />
                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"
                        android:text="Date &amp; Time" />
                    <TextView
                        android:id="@+id/tvLocation"
                        android:paddingBottom="8dp"
                        android:textColor="@color/colorAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Location" />
<!--                    <TextView-->
<!--                        android:id="@+id/tvFoodType"-->
<!--                        android:paddingBottom="8dp"-->
<!--                        android:textColor="@color/colorAddress"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:textSize="16sp"-->
<!--                        android:text="Food Type" />-->
<!--                    <TextView-->
<!--                        android:id="@+id/tvQuantity"-->
<!--                        android:paddingBottom="8dp"-->
<!--                        android:textColor="@color/colorAddress"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:textSize="16sp"-->
<!--                        android:text="Quantity" />-->


                </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/rlRight"
                        android:layout_toRightOf="@id/llName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_alignParentRight="true"
                            >
                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/chakrapetch_regular"
                                android:textColor="@color/colorAddress"
                                android:text="Status"
                                />
                            <Button
                                android:id="@+id/btnDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:layout_marginTop="68dp"
                                android:text="@string/right_arrow"
                                />
                        </LinearLayout>
                    </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>